<maui:MauiWinUIApplication
    x:Class="ChatPlayground.WinUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:maui="using:Microsoft.Maui"
    xmlns:local="using:ChatPlayground.WinUI">
    <maui:MauiWinUIApplication.Resources>
        <!-- Dark colors-->
        <Color x:Key="PrimaryDark">#C2C1FF</Color>
        <Color x:Key="OnPrimaryDark">#2A2A60</Color>
        <Color x:Key="PrimaryContainerDark">#414178</Color>
        <Color x:Key="OnPrimaryContainerDark">#E2DFFF</Color>
        <Color x:Key="SecondaryDark">#C6C4DD</Color>
        <Color x:Key="OnSecondaryDark">#2F2F42</Color>
        <Color x:Key="SecondaryContainerDark">#454559</Color>
        <Color x:Key="OnSecondaryContainerDark">#E2E0F9</Color>
        <Color x:Key="TertiaryDark">#E9B9D2</Color>
        <Color x:Key="OnTertiaryDark">#46263A</Color>
        <Color x:Key="TertiaryContainerDark">#5F3C51</Color>
        <Color x:Key="OnTertiaryContainerDark">#FFD8EB</Color>
        <Color x:Key="ErrorDark">#FFB4AB</Color>
        <Color x:Key="OnErrorDark">#690005</Color>
        <Color x:Key="ErrorContainerDark">#93000A</Color>
        <Color x:Key="OnErrorContainerDark">#FFDAD6</Color>
        <Color x:Key="BackgroundDark">#131318</Color>
        <Color x:Key="OnBackgroundDark">#E4E1E9</Color>
        <Color x:Key="SurfaceDark">#131318</Color>
        <Color x:Key="OnSurfaceDark">#E4E1E9</Color>
        <Color x:Key="SurfaceVariantDark">#47464F</Color>
        <Color x:Key="OnSurfaceVariantDark">#C8C5D0</Color>
        <Color x:Key="OutlineDark">#918F9A</Color>
        <Color x:Key="OutlineVariantDark">#47464F</Color>
        <Color x:Key="ScrimDark">#000000</Color>
        <Color x:Key="InverseSurfaceDark">#E4E1E9</Color>
        <Color x:Key="InverseOnSurfaceDark">#303036</Color>
        <Color x:Key="InversePrimaryDark">#585992</Color>
        <Color x:Key="PrimaryFixedDark">#E2DFFF</Color>
        <Color x:Key="OnPrimaryFixedDark">#14134A</Color>
        <Color x:Key="PrimaryFixedDimDark">#C2C1FF</Color>
        <Color x:Key="OnPrimaryFixedVariantDark">#414178</Color>
        <Color x:Key="SecondaryFixedDark">#E2E0F9</Color>
        <Color x:Key="OnSecondaryFixedDark">#1A1A2C</Color>
        <Color x:Key="SecondaryFixedDimDark">#C6C4DD</Color>
        <Color x:Key="OnSecondaryFixedVariantDark">#454559</Color>
        <Color x:Key="TertiaryFixedDark">#FFD8EB</Color>
        <Color x:Key="OnTertiaryFixedDark">#2F1124</Color>
        <Color x:Key="TertiaryFixedDimDark">#E9B9D2</Color>
        <Color x:Key="OnTertiaryFixedVariantDark">#5F3C51</Color>
        <Color x:Key="SurfaceDimDark">#131318</Color>
        <Color x:Key="SurfaceBrightDark">#39383F</Color>
        <Color x:Key="SurfaceContainerLowestDark">#0E0E13</Color>
        <Color x:Key="SurfaceContainerLowDark">#1B1B21</Color>
        <Color x:Key="SurfaceContainerDark">#1F1F25</Color>
        <Color x:Key="SurfaceContainerHighDark">#2A292F</Color>
        <Color x:Key="SurfaceContainerHighestDark">#35343A</Color>

        <DataTemplate x:Key="MauiAppTitleBarTemplate">
            <Grid >
                <Border
                    Canvas.ZIndex="1"
                    VerticalAlignment="Stretch"
                    Background="{StaticResource SurfaceContainerLowDark}"
                    Margin="0,0,0,0">
                    <!--<TextBlock
                        Foreground="{StaticResource OutlineVariantDark}"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Text="LM-Kit Chat Playground"/>-->

                </Border>
            </Grid>
        </DataTemplate>
    </maui:MauiWinUIApplication.Resources>
</maui:MauiWinUIApplication>
